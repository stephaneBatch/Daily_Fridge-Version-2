{% block body %}

<h1>Bienvenue sur la page d'inscription !</h1>
    
    {{form_start(form)}}
    
    {{form_row(form.Nom, {'label':'Nom d\'utilisateur', 'attr':{
        'placeholder':'Nom de l\'utilisateur', 'class':'form-control' }} ) }} 

     {{form_row(form.Prenom, {'label':'Prénom de l\'utilisateur', 'attr':{
